<?xml version="1.0" encoding="UTF-8"?>
<ds>
	<ds module="com.logicbus.dbcp.impl.InnerContext">
		<dbcp
	    	id = "default"
	    	driver = "org.mariadb.jdbc.Driver"
	    	url = "${local.db.server}"
	    	username = "${local.db.username}"
	    	password = "${local.db.password}"
	    	coder = "DES3"
	    	maxActive = "30" 
	    	maxIdle = "5"
	    	maxWait = "10000"
	    	timeout = "3600"
	    />
	</ds>
</ds>

